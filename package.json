{
  "name": "exodus-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "test:e2e": "playwright test",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:html": "playwright test --reporter=html",
    "e2e:report": "playwright show-report",
    "e2e:ci": "playwright test -c ./playwright.config.ts --reporter=html && playwright show-report --port 0",
    "ci:lint-typecheck": "pnpm lint && pnpm typecheck",
    "postinstall": "node -e \"const { existsSync } = require('fs'); const { execSync } = require('child_process'); const paths=['./prisma/schema.prisma','./exodus-app/prisma/schema.prisma']; if (paths.some(p=>existsSync(p))) execSync('pnpm exec prisma generate',{stdio:'inherit'})\""
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "next": "15.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "8.57.0",
    "eslint-config-next": "15.5.5",
    "playwright": "^1.56.0",
    "postcss": "^8.0.0",
    "prisma": "^6.17.1",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.0.0"
  }
}
