{
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "typecheck:e2e": "tsc -p e2e/tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=10",
    "lint:e2e": "eslint e2e --max-warnings=0 --no-ignore",
    "test:e2e": "playwright test",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:html": "playwright test --reporter=html",
    "e2e:report": "playwright show-report",
    "e2e:ci": "playwright test -c ./playwright.config.ts --reporter=html && playwright show-report --port 0",
    "ci:lint-typecheck": "pnpm lint && pnpm typecheck && pnpm lint:e2e && pnpm typecheck:e2e",
    "postinstall": "node -e \"const { existsSync } = require('fs'); const { execSync } = require('child_process'); const paths=['./prisma/schema.prisma']; if (paths.some(p=>existsSync(p))) execSync('pnpm prisma generate',{stdio:'inherit'})\""
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^16",
    "@playwright/test": "^1.56.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.22",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.1",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
