{
  "name": "exodus-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:turbo": "next build --turbo",
    "start": "next start",
    "lint": "eslint .",
    "postinstall": "prisma generate",
    "typecheck": "tsc -p tsconfig.json --noEmit",

    "test": "playwright test -c ./playwright.config.ts",
    "e2e": "playwright test -c ./playwright.config.ts",
    "e2e:ui": "playwright test -c ./playwright.config.ts --ui",
    "e2e:html": "playwright test -c ./playwright.config.ts --reporter=html",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "jose": "^6.1.0",
    "next": "15.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "playwright": "^1.56.0",
    "prisma": "^6.17.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
