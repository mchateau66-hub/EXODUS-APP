{
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev -p ${PORT:-3000}",
    "build": "next build",
    "start": "next start -p ${PORT:-3000}",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "ci:lint-typecheck": "pnpm lint && pnpm typecheck",
    "e2e": "playwright test --reporter=github,html",
    "e2e:ui": "playwright test --ui",
    "e2e:html": "playwright test --reporter=html",
    "prisma:generate": "prisma generate",
    "postinstall": "node -e \"const {existsSync}=require('fs');const {execSync}=require('child_process');const has=['./prisma/schema.prisma','./exodus-app/prisma/schema.prisma'].some(p=>existsSync(p));if(has && !process.env.CI && !process.env.VERCEL){execSync('pnpm exec prisma generate',{stdio:'inherit'})}\""
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "typescript": "^5.9.3"
  }
}
