{
  "name": "exodus-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
  "dev": "next dev",
  "build": "next build",
  "start": "next start",

  "typecheck": "tsc -p tsconfig.json --noEmit",
  "typecheck:e2e": "echo \"(pas de typecheck séparé pour e2e)\"",

  "lint": "eslint . --max-warnings=10",
  "lint:e2e": "eslint e2e --max-warnings=10",

  "test:e2e": "playwright test",
  "e2e": "playwright test",
  "e2e:ui": "playwright test --ui",
  "e2e:html": "playwright test --reporter=html",
  "e2e:report": "playwright show-report",
  "e2e:ci": "playwright test -C ./playwright.config.ts --reporter=html && playwright show-report --port 0",
  "e2e:smoke": "playwright test --project=chromium --grep @smoke",
  "e2e:browsers": "playwright install --with-deps",

  "ci:lint-typecheck": "pnpm run lint && pnpm run lint:e2e && pnpm run typecheck && pnpm run typecheck:e2e"
},
  "dependencies": {
    "@prisma/client": "6.17.1",
    "jose": "6.1.2",
    "jsonwebtoken": "9.0.2",
    "next": "15.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "1.56.0",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "22.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "autoprefixer": "10.4.22",
    "eslint": "8.57.0",
    "eslint-config-next": "15.5.5",
    "playwright": "1.56.0",
    "postcss": "8.4.41",
    "prisma": "6.17.1",
    "tailwindcss": "4.1.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0"
  }
}
