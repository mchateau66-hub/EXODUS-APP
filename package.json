{
  "name": "exodus-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:e2e": "echo \"(pas de typecheck séparé pour e2e)\"",
    "lint": "eslint . --max-warnings=10",
    "lint:e2e": "eslint e2e --max-warnings=10",
    "test:e2e": "playwright test",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:html": "playwright test --reporter=html",
    "e2e:report": "playwright show-report",
    "e2e:ci": "playwright test -C ./playwright.config.ts --reporter=html && playwright show-report --port 0",
    "e2e:smoke": "playwright test --project=chromium --grep @smoke",
    "e2e:browsers": "playwright install --with-deps",
    "next15:audit": "node scripts/next15_audit.mjs",
    "next15:audit:strict": "NEXT15_AUDIT_STRICT=1 node scripts/next15_audit.mjs",
    "ci:lint-typecheck": "pnpm run next15:audit && pnpm run lint && pnpm run lint:e2e && pnpm run typecheck && pnpm run typecheck:e2e",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "prepare": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "6.17.1",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.8",
    "@vercel/blob": "^2.0.0",
    "jose": "6.1.2",
    "jsonwebtoken": "9.0.2",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.562.0",
    "next": "15.5.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-leaflet": "^5.0.0",
    "resend": "^6.6.0",
    "stripe": "^20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.3",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/jsonwebtoken": "9.0.6",
    "@types/leaflet": "^1.9.21",
    "@types/node": "25.0.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "@typescript-eslint/parser": "8.53.0",
    "autoprefixer": "10.4.23",
    "dotenv": "^17.2.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "playwright": "1.57.0",
    "postcss": "8.5.6",
    "prisma": "7.2.0",
    "tailwindcss": "4.1.18",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0"
  }
}
