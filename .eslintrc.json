{
  "root": true,
  "extends": ["next/core-web-vitals"],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "playwright-report/",
    "test-results/",
    "coverage/"
  ],
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": { "sourceType": "module", "ecmaVersion": "latest" }
    },
    {
      "files": ["e2e/**/*.{ts,tsx}"],
      "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-console": "off"
      }
    }
  ]
}
